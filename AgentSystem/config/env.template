# Server Settings
PORT=8000
HOST=0.0.0.0
DEBUG=False
SECRET_KEY=generate_a_secure_random_string_here

# Storage Settings
DATA_DIR=./data
LOGS_DIR=./logs
MODELS_DIR=./models

# ========================================================================
# Sensory Input Module Settings
# ========================================================================

# Audio Settings
ENABLE_AUDIO_PROCESSING=true
AUDIO_DEVICE_INDEX=0
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_RECORD_TIMEOUT=0.5
AUDIO_PHRASE_TIMEOUT=3.0
SPEECH_THRESHOLD=0.3
SPEECH_MINIMUM_LENGTH=0.5

# Video Settings
ENABLE_VIDEO_PROCESSING=true
VIDEO_DEVICE_INDEX=0
VIDEO_RESOLUTION=640x480
VIDEO_FPS=30
VIDEO_PROCESSING_INTERVAL=0.5
ENABLE_FACE_DETECTION=true
ENABLE_OBJECT_DETECTION=false
FACE_DETECTION_CONFIDENCE=0.5
SAVE_PROCESSED_FRAMES=false
FRAMES_OUTPUT_DIR=./data/frames

# ========================================================================
# Continuous Learning Module Settings
# ========================================================================

# Knowledge Base Settings
KNOWLEDGE_DB_PATH=~/.agent_system/knowledge/knowledge.db
ENABLE_BACKGROUND_RESEARCH=true
ENABLE_AUTO_RESEARCH=false
RESEARCH_INTERVAL=3600
RESEARCH_DEPTH=2
RESEARCH_MAX_RESULTS=3

# Web Research Settings
RESEARCH_RATE_LIMIT=2
RESEARCH_USER_AGENT=Mozilla/5.0 AgentSystem Research Bot
RESEARCH_CACHE_EXPIRY=3600
RESEARCH_MAX_PAGES_PER_TOPIC=5
FACT_EXTRACTION_CONFIDENCE=0.6

# Learning Settings
LEARNING_ENABLED=true
MAX_KNOWLEDGE_ITEMS=10000
KNOWLEDGE_CLEANUP_INTERVAL=86400
MIN_FACT_CONFIDENCE=0.5
